@model Domain.Customer

@{
    ViewData["Title"] = "EditCustomer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>EditCustomer</h1>

<h4>Customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditCustomer">
