@model LicenseManagerWeb.ViewModels.CustomerDetailsViewModel

@{
    ViewBag.Title = Model.Customer.Name + " Details";
}

<h4>@Model.Customer.Name Details</h4>

<div class="row">
    <div class="col-md-6 mb-4">
        <ul class="list-group">
            <li class="list-group-item d-flex">
                <div>
                    <label asp-for="Customer.Name" class="text-muted"></label>
                    <h6 class="my-0">@Model.Customer.Name</h6>
                </div>
            </li>
            <li class="list-group-item d-flex">
                <div>
                    <label asp-for="Customer.Country" class="text-muted"></label>
                    <h6 class="my-0">@Model.Customer.Country</h6>
                </div>
            </li>
            <li class="list-group-item d-flex">
                <div>
                    <label asp-for="Customer.Address" class="text-muted"></label>
                    <h6 class="my-0">@Model.Customer.Address</h6>
                </div>
            </li>
        </ul>
    </div>
</div>

    <div>
        <a asp-controller="Customers" asp-action="EditCustomer" asp-route-id="@Model.Customer.Id">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
