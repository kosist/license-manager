@model Product

@{
    ViewBag.Title = Model.Name + " Details";
    Layout = "_Layout";
}

<div class="container">
    <a href="Products/Edit" class="btn btn-primary mb-1" role="button">Edit</a>
</div>


<div class="container">
    <div class="row">
        <div class="col-2" align="right">
            <h4>Name:</h4>
        </div>
        <div class="col-10">
            <h4>@Model.Name</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-2" align="right">
            <h4>Version:</h4>
        </div>
        <div class="col-10">
            <h4>@Model.Version</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-2" align="right">
            <h4>Links:</h4>
        </div>
        <div class="col-10">
            <div class="row">
                <div class="col-8">
                    <a href=@Model.ProductMetadata.SharePointLink>@Model.ProductMetadata.SharePointLink</a>
                </div>
                <div class="col-8">
                    <a href=@Model.ProductMetadata.SmartSheetLink>@Model.ProductMetadata.SmartSheetLink</a>
                </div>
                <div class="col-8">
                    <a href=@Model.ProductMetadata.EasyProjectLink>@Model.ProductMetadata.EasyProjectLink</a>
                </div>
                <div class="col-8">
                    <a href=@Model.ProductMetadata.SourceCodeLocation>@Model.ProductMetadata.SourceCodeLocation</a>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-2" align="right">
            <h4>License Type:</h4>
        </div>
        <div class="col-10">
            <h4>@Model.LicenseType</h4>
        </div>
    </div>
    @if (Model.LicenseType == LicenseTypeEnum.UsbToken)
    {
        <partial name="_UsbToken" model="Model.License" />
    }
</div>


