@model Product

@{
    ViewBag.Title = Model.Name + " Details";
    Layout = "_Layout";
}

    <div class="container">
        <a asp-controller="Products" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary mb-1">Edit</a>
    </div>


<div class="container">
    <div class="row">
        <div class="col-3" align="right">
            <h4>Name:</h4>
        </div>
        <div class="col-9">
            <h4>@Model.Name</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-3" align="right">
            <h4>Version:</h4>
        </div>
        <div class="col-9">
            <h4>@Model.Version</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-3" align="right">
            <h4>Links:</h4>
        </div>
        <div class="col-9">
            <div class="row">
                <div class="col-8">
                    <a href=@Model.ProductMetadata.SharePointLink>@Model.ProductMetadata.SharePointLink</a>
                </div>
                <div class="col-8">
                    <a href=@Model.ProductMetadata.SmartSheetLink>@Model.ProductMetadata.SmartSheetLink</a>
                </div>
                <div class="col-8">
                    <a href=@Model.ProductMetadata.EasyProjectLink>@Model.ProductMetadata.EasyProjectLink</a>
                </div>
                <div class="col-8">
                    <a href=@Model.ProductMetadata.SourceCodeLocation>@Model.ProductMetadata.SourceCodeLocation</a>
                </div>
            </div>
        </div>
    </div>

    @if (Model.License is UsbTokenLicense)
    {
        <partial name="_UsbToken" model="Model.License" />
    }
    <partial name="_EmergencyKey" model="Model.EmergencyKey" />
    <partial name="_IssueData" model="Model.License" />
    <partial name="_ViProtectionInfo" model="Model.ViProtectionInfo" />

</div>


