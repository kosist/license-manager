@model Domain.Product

<h4>Product</h4>
<hr />
<form asp-action="Edit">
    <div class="row">
        <div class="col-md-6 order-md-1">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-muted">Product Information</span>
            </h4>
            <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                <input asp-for="ProductId" class="form-control w-25" />
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control w-75" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Version" class="control-label"></label>
                <input asp-for="Version" class="form-control w-25" />
                <span asp-validation-for="Version" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6 order-md-2">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-muted">Links</span>
            </h4>
            <div class="form-group">
                <label asp-for="ProductMetadata.SourceCodeLocation" class="control-label"></label>
                <input asp-for="ProductMetadata.SourceCodeLocation" class="form-control" />
                <span asp-validation-for="ProductMetadata.SourceCodeLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductMetadata.SharePointLink" class="control-label"></label>
                <input asp-for="ProductMetadata.SharePointLink" class="form-control" />
                <span asp-validation-for="ProductMetadata.SharePointLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductMetadata.EasyProjectLink" class="control-label"></label>
                <input asp-for="ProductMetadata.EasyProjectLink" class="form-control" />
                <span asp-validation-for="ProductMetadata.EasyProjectLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductMetadata.SmartSheetLink" class="control-label"></label>
                <input asp-for="ProductMetadata.SmartSheetLink" class="form-control" />
                <span asp-validation-for="ProductMetadata.SmartSheetLink" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
