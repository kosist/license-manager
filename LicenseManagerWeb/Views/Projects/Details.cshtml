@model ProjectDetailsViewModel

@{
    ViewBag.Title = Model.ProjectName + " Details";
}

<h4>@Model.ProjectName Details</h4>

<div class="row">
    <div class="col-md-6 mb-4">
        <ul class="list-group">
            <li class="list-group-item d-flex">
                <div>
                    <label asp-for="ProjectName" class="text-muted"></label>
                    <h6 class="my-0">@Model.ProjectName</h6>
                </div>
            </li>
            <li class="list-group-item d-flex">
                <div>
                    <label asp-for="CustomerName" class="text-muted"></label>
                    <h6 class="my-0">@Model.CustomerName</h6>
                </div>
            </li>
        </ul>
    </div>
</div>

<div>
    <a asp-controller="Projects" asp-action="Edit" asp-route-id="@Model.ProjectId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
